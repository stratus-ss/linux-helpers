{
  "alloy_path": "/root/",
  "alloy_config_dir": "config",
  "alloy_binary": "bin/alloy",
  "alloy_workdir": "/var/lib/alloy",
  "alloy_metrics_port": 12345,
  
  "loki_host": "loki.example.com",
  "loki_host_port": 3100,
  
  "host": {
    "auth_log": true,
    "kernel_log": true,
    "messages_log": true,
    "syslog_log": true,
    "misc_log": true
  },
  
  "log_dns": true,
  
  "alloy_config_settings": {
    "max_segment_age": "168h",
    "wal_enabled": true,
    "drain_timeout": "2m",
    "batch_size": "2MiB",
    "batch_wait": "5s",
    "queue_capacity": "300MiB",
    "max_backoff_period": "300s",
    "max_backoff_retries": 50,
    "min_backoff_period": "1s",
    "remote_timeout": "30s",
    "journal_max_age": "720h",
    "journal_path": "/var/log/journal"
  },
  
  "alloy_env_vars": {
    "CUSTOM_ARGS": "",
    "RESTART_ON_UPGRADE": "true"
  },
  
  "external_labels": {
    "agent_version": "alloy",
    "deployment_type": "bare-metal",
    "environment": "production"
  }
}