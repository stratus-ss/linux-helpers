[Unit]
Description=Prometheus Node Exporter
After=network.target

[Service]
User={{ node_exporter_user }}
Group={{ node_exporter_group }}
Type=simple
ExecStart={{ node_exporter_bin_path }} \
    --web.listen-address=:{{ node_exporter_port }} \
    --collector.systemd \
    --collector.processes

[Install]
WantedBy=multi-user.target